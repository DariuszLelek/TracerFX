<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<AnchorPane id="AnchorPane" prefHeight="37.0" prefWidth="574.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tracerfx.fxml.controller.FileTabFXMLController">
   <stylesheets>
      <URL value="@/tracerfx/css/filetabfxml.css" />
   </stylesheets>
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ListView fx:id="listView" onMouseClicked="#checkModified" style="-fx-font-family: Consolas;" VBox.vgrow="ALWAYS" />
            <ToolBar>
               <items>
                  <Label text="Lines:" />
                  <Label fx:id="lblLines" text="0">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label text=", all:" />
                  <Label fx:id="lblTotalLines" text="0" />
                  <Separator orientation="VERTICAL" />
                  <HBox alignment="CENTER">
                     <children>
                        <Label text="Last search:" />
                        <Label fx:id="lblLastSearch" text="Label">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="4.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                  </HBox>
                  <Pane HBox.hgrow="ALWAYS" />
                  <Separator orientation="VERTICAL" />
                  <CheckBox fx:id="chckFilter" mnemonicParsing="false" onAction="#chckFilter" text="Filter" />
                  <TextField fx:id="txtFilter" />
                  <Separator orientation="VERTICAL" />
                  <CheckBox fx:id="chckFollowTrail" mnemonicParsing="false" onAction="#chckFollowTrail" text="Monitor" />
               </items>
            </ToolBar>
         </children>
      </VBox>
   </children>
</AnchorPane>
